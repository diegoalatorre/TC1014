#WSQ06-Pick a Number
import random
attemptcounter=0
r=random.randint(1,101)
print ("I have a number choosen between 1 and 100")
number=input("Please guess a number between 1 and 100: ")
number=int(number)
attemptcounter=attemptcounter+1
while number!=r:
    if number>r:
        print ("It is less ")
    else:
        print ("It is bigger ")
    number=input("Please guess a number between 1 and 100: ")
    number=int(number)
    attemptcounter=attemptcounter+1

print ("You got it! The right answer is indeed", r)
print("You made", attemptcounter, "guesses to get the right number.")
print ("You got it! The right answer is indeed", r)
